// Light
@font-face
  font-family 'Open Sans'
  src local('Open Sans')
      url('fonts/OpenSans-Light.woff2') format('woff2'),
      url('fonts/OpenSans-Light.woff') format('woff')
  font-weight 300
  font-style normal

